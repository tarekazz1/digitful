---
// Import components and styles
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../assets/bootstrap.scss';
import '../assets/bootstrap-custom.css';
import 'bootstrap-icons/font/bootstrap-icons.css';

// Props
const { title, description, canonicalUrl } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <title>{title}</title>
    <!-- Preload fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-dark text-white">
    <div class="particles-bg" id="particles-js"></div>
    <Header />
    <slot />
    <Footer />
    
    <!-- Bootstrap JS Bundle with Popper -->
    <script is:inline src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Particles.js -->
    <script is:inline src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <!-- Custom scripts -->
    <script is:inline src="/scripts.js"></script>
  </body>
</html>
