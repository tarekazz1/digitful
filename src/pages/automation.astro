const pageTitle = "Process Automation - Digitful";
const pageDescription = "Process Automation services by Digitful. Work less, do more.";
const pageCanonical = "https://digitful.ca/automation/";
---
<BaseLayout title={pageTitle} description={pageDescription} canonicalUrl={pageCanonical}>
    {/* === PASTE YOUR COPIED <main>...</main> HERE === */}
    <main>
        <section class="service-hero">
          <h1>
            <span class="material-symbols-outlined automation-icon large-icon">settings</span>
            Process Automation
          </h1>
          <p>Work Less, Do More.</p>
        </section>
    
        <!-- Additional Process Automation content can go here -->
        <section class="service-info">
          <h2>You've got tools—but nothing's talking to each other.</h2>
    
